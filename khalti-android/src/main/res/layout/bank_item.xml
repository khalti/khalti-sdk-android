<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/flContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mrl_rippleColor="@color/defaultRipple"
    app:mrl_rippleOverlay="true"
    app:mrl_rippleDimension="60dp"
    app:mrl_rippleRoundedCorners="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/globalPadding">

        <FrameLayout
            android:id="@+id/flBankLogo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="@dimen/cardPadding"
            android:background="@drawable/circle_outline"
            android:gravity="center"
            android:padding="2dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/ivBankLogo"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:scaleType="fitCenter" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/flBankTextIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="@dimen/cardPadding"
            android:background="@drawable/circle_primary"
            android:gravity="center"
            android:padding="2dp"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvBankIcon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/head"
                app:fontFamily="@font/roboto_bold" />
        </FrameLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvBankName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/empty"
            android:textColor="@color/black"
            android:textSize="@dimen/head"
            app:fontFamily="@font/roboto_medium" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvBankFullName"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvBankId"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvBankLogo"
            android:layout_width="0dp"
            android:layout_height="0dp" />
    </LinearLayout>
</com.balysv.materialripple.MaterialRippleLayout>